#include <iostream>
#include <math.h>
#include <Windows.h>

using namespace std;

void exc1();
void exc2();

int main()
{
    cout << "What exercise do you want to see?\n";
    cout << "1 = First exercise, 2 = Second exercise, 0 = exit\n";

    int n = 1;
    while (n != 0) {
        cout << endl;
        if (n != 0) {
            cin >> n;
            switch (n) {
            case 1:
                exc1();
                break;
            case 2:
                exc2();
                break;
            default:
                cout << "There is no exercise like that" << endl;
                break;
            }
        }
    }
}

void exc1() {
    const int n = 10;
    double mass[n];
    cout << "Enter the massive" << endl;
    for (int i = 0; i < n; i++)
    {
        cin >> mass[i];
    }
    double b = 1;
    int k = 0;
    for (int i = 0; i < n; i++)
        if (mass[i] > 0)
        {
            b *= mass[i];
            k++;
        }
    if (k == 0) {
        cout << endl << "There are no positive values";
    }
    else
        cout << "Answer \n" << b;
};

void exc2() {

    const int n = 10;
    int k1 = 0;
    double mass[n];
    cout << "Enter massive" << endl;
    for (int i = 0; i < n; i++)
    {
        cin >> mass[i];
    }
    int k2 = 0;
    double min = mass[0], b = 0, sum = 0;
    for (int i = 0; i < n; i++)
        if (mass[i] < min)
        {
            k2++;
            min = mass[i];
            b = i;
        }
    for (int i = 0; i < b; i++) {

        sum += mass[i];
    }
    if (k2 == 0) {
        cout << endl << "There are no minimal value";
        return;
    }

    cout << "Answer \n" << sum << endl;
    for (int i = 0; i < n; i += 2) {
        for (int j = 0; j < n - 1; j++) {
            if (mass[j] > mass[j + 1]) {
                double b = mass[j];
                mass[j] = mass[j + 1];
                mass[j + 1] = b;
            }
        }
    }

    for (int i = 0; i < n; i = i + 2) {
        k1++;
    }
    double* sorted1 = new double[k1];

    for (int i = 0, j = 0; j < k1; i = i + 2, j++) {
        sorted1[j] = mass[i];
    }
    cout << endl;
    for (int i = 0; i < k1; i++) {
        cout << sorted1[i] << " ";
    }
    delete[] sorted1;
    k1 = 0;
    for (int i = 1; i < n; i = i + 2) {
        k1++;
    }
    double* sorted2 = new double[k1];

    for (int i = 1, j = 0; j < k1; i = i + 2, j++) {
        sorted2[j] = mass[i];
    }
    cout << endl;
    for (int i = 0; i < k1; i++) {
        cout << sorted2[i] << " ";
    }
    delete[] sorted2;
}